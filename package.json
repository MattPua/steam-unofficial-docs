{
  "name": "steam-unofficial-docs",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "Unofficial documentation for the Steam Web API",
  "keywords": [
    "steam",
    "api",
    "documentation",
    "unofficial",
    "steamworks"
  ],
  "author": "Matt Pua",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattpua/steam-unofficial-docs"
  },
  "scripts": {
    "build": "next build",
    "dev": "next dev --port 3001",
    "start": "next start",
    "types:check": "fumadocs-mdx && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "biome check",
    "format": "biome format --write",
    "generate": "bun ./scripts/generate-docs.ts"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "fumadocs-core": "16.2.3",
    "fumadocs-mdx": "14.1.0",
    "fumadocs-openapi": "^10.1.1",
    "fumadocs-ui": "16.2.3",
    "lucide-react": "^0.556.0",
    "next": "16.0.8",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "shiki": "^3.19.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.8"
  }
}